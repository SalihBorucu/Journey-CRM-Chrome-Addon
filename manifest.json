{
    "name": "Journey CRM Extension",
    "version": "1",
    "manifest_version": 2,
    "description": "Move leads to Journey CRM",
    "content_scripts": [{
        "matches": ["https://*.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage", "http://journeycrm.test/*"],

    "page_action": {
        "default_title": "Journey CRM Extension",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo.png"
        }
    },
    "icons": {
        "128": "images/logo.png"
    }
}